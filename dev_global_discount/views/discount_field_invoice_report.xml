<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="discount_field_invoice_report_id" inherit_id="account.report_invoice_document">  
	<xpath expr="//div[@class='clearfix']/div[@class='row pull-right']/div/table[@class='table-condensed']/tr" position="after">
	        <t t-if="o.apply_discount">
            <tr class="border-black">
                <td><strong>Discount</strong></td>
                <td class="text-right">
	                <span t-esc="o.amount_untaxed - o.disc_amount"
	                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
	                   
	            </td>
            </tr>
            <tr class="border-black">
                <td><strong>Amount After Discount</strong></td>
                <td class="text-right">
	                <span t-esc="o.disc_amount"
	                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
	                   
	            </td>
            </tr>
            </t>
	</xpath>	
	</template>
</odoo>

